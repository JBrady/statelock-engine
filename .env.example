# Storage
CHROMA_DB_PATH=./chroma_db

# Embeddings
# local = sentence-transformers model
# hash = lightweight deterministic embedder (useful for CI/tests)
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
HASH_EMBEDDING_DIM=256

# API
API_TITLE=StateLock Engine API
API_VERSION=0.3.0
API_PREFIX=/memories
API_DEFAULT_PAGE_SIZE=100
API_MAX_PAGE_SIZE=500
API_NAME_MAX_CHARS=120
API_SESSION_ID_MAX_CHARS=160
API_CONTENT_MAX_CHARS=12000
API_TAG_MAX_CHARS=64
API_TAG_MAX_COUNT=20
AUTH_REQUIRED=false
STATELOCK_API_KEY=

# Hybrid query tuning
QUERY_CANDIDATE_MULTIPLIER=5
